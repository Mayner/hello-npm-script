    "mocha": "mocha tests/",
    "//": "运行所有代码检查和单元测试",
    "test": "npm-run-all --parallel lint:* mocha"
  },
  "keywords": [
    "npm",
    "script"
  ],
  "author": "Mayner",
  "license": "MIT",
  "devDependencies": {
    "chai": "^4.1.2",
    "eslint": "^4.19.1",
    "jsonlint": "^1.6.3",
    "markdownlint-cli": "^0.9.0",
    "mocha": "^5.2.0",
    "npm-run-all": "^4.1.3",
    "stylelint": "^9.2.1",
    "stylelint-config-standard": "^18.2.0"
  }
}
